<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.whut.cs.bi.biz.mapper.BiProjectDeviceMapper">
    
    <resultMap type="BiProjectDevice" id="BiProjectDeviceResult">
        <result property="id"    column="id"    />
        <result property="projectId"    column="project_id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBiProjectDeviceVo">
        select id, project_id, device_id, create_time from bi_project_device
    </sql>

    <select id="selectBiProjectDeviceList" parameterType="BiProjectDevice" resultMap="BiProjectDeviceResult">
        <include refid="selectBiProjectDeviceVo"/>
        <where>  
            <if test="projectId != null "> and project_id = #{projectId}</if>
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
        </where>
    </select>
    
    <select id="selectBiProjectDeviceById" parameterType="Long" resultMap="BiProjectDeviceResult">
        <include refid="selectBiProjectDeviceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBiProjectDevice" parameterType="BiProjectDevice" useGeneratedKeys="true" keyProperty="id">
        insert into bi_project_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projectId != null">project_id,</if>
            <if test="deviceId != null">device_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projectId != null">#{projectId},</if>
            <if test="deviceId != null">#{deviceId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBiProjectDevice" parameterType="BiProjectDevice">
        update bi_project_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="projectId != null">project_id = #{projectId},</if>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBiProjectDeviceById" parameterType="Long">
        delete from bi_project_device where id = #{id}
    </delete>

    <delete id="deleteBiProjectDeviceByIds" parameterType="String">
        delete from bi_project_device where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteBiProjectDeviceByProjectAndDevice">
        delete from bi_project_device where project_id = #{projectId} and device_id = #{deviceId}
    </delete>

    <select id="checkBiProjectDeviceExists" resultType="int">
        select count(1) from bi_project_device where project_id = #{projectId} and device_id = #{deviceId}
    </select>
</mapper> 