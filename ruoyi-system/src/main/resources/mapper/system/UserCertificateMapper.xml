<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.UserCertificateMapper">

    <resultMap type="UserCertificate" id="UserCertificateResult">
        <id     property="id"           column="id"          />
        <result property="userId"       column="user_id"     />
        <result property="certificate"  column="certificate" />
        <result property="serialNumber" column="serial_number" />
        <result property="createBy"    column="create_by"   />
        <result property="createTime"  column="create_time" />
        <result property="updateBy"    column="update_by"   />
        <result property="updateTime"  column="update_time" />
        <result property="remark"     column="remark"      />
    </resultMap>

    <sql id="selectUserCertificateVo">
        select id, user_id, certificate, serial_number, create_by, create_time, update_by, update_time, remark
        from bi_user_certificate
    </sql>

    <select id="selectUserCertificateById" parameterType="Long" resultMap="UserCertificateResult">
        <include refid="selectUserCertificateVo"/>
        where id = #{id}
    </select>

    <select id="selectUserCertificateList" parameterType="UserCertificate" resultMap="UserCertificateResult">
        <include refid="selectUserCertificateVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="certificate != null  and certificate != ''"> and certificate = #{certificate}</if>
            <if test="serialNumber != null  and serialNumber != ''"> and serial_number = #{serialNumber}</if>
        </where>
    </select>

    <insert id="insertUserCertificate" parameterType="UserCertificate" useGeneratedKeys="true" keyProperty="id">
        insert into bi_user_certificate
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="certificate != null and certificate != ''">certificate,</if>
            <if test="serialNumber != null and serialNumber != ''">serial_number,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="remark != null and remark != ''">remark,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="certificate != null and certificate != ''">#{certificate},</if>
            <if test="serialNumber != null and serialNumber != ''">#{serialNumber},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateUserCertificate" parameterType="UserCertificate">
        update bi_user_certificate
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="certificate != null and certificate != ''">certificate = #{certificate},</if>
            <if test="serialNumber != null and serialNumber != ''">serial_number = #{serialNumber},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserCertificateById" parameterType="Long">
        delete from bi_user_certificate where id = #{id}
    </delete>


    <delete id="deleteUserCertificateByIds" parameterType="Long">
        delete from bi_user_certificate where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>